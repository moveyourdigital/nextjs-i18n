{
  "name": "nextjs-i18n",
  "version": "0.1.0",
  "description": "I18n hook and component for Next.js with support for plurals, Intl and React interpolation",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "unpkg": "./dist/index.umd.js",
  "type": "module",
  "source": "src/index.ts",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "jest --coverage",
    "watch": "jest  --watch",
    "build": "microbundle --jsx",
    "lint": "eslint src/ --ext .ts",
    "format": "prettier --config .prettierrc 'src/**/*.{ts,tsx}' --write",
    "prepublishOnly": "npm run format && npm run lint && npm t && npm run build",
    "update:latest": "npm-check-updates -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moveyourdigital/nextjs-i18n.git"
  },
  "keywords": [],
  "author": "Vitor Carvalho <lightningspirit@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moveyourdigital/nextjs-i18n/issues"
  },
  "homepage": "https://github.com/moveyourdigital/nextjs-i18n#README.md",
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.4.0",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "jest-mock-console": "^1.2.3",
    "microbundle": "^0.14.2",
    "npm-check-updates": "^12.2.1",
    "prettier": "^2.5.1",
    "react-test-renderer": "^17.0.2",
    "ts-jest": "^27.1.3"
  },
  "peerDependencies": {
    "next": "^12.0.8",
    "react": "^17.0.2"
  }
}
